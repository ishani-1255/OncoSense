    <div class="upload-main-container">
      <div class="upload-container">
        <h1>Upload Your File</h1>
        <form
          id="uploadForm"
          action="/scan"
          method="post"
          enctype="multipart/form-data"
        >
          <!-- Name input field -->
          <div class="name-input-container">
            <label for="userName">Enter your name:</label>
            <input
              type="text"
              id="userName"
              name="userName"
              placeholder="Your name..."
              required
            />
          </div>

          <div class="file-type-options">
            <label>
              <input type="radio" name="fileType" value="image" required />
              Upload Image
            </label>
            <label>
              <input type="radio" name="fileType" value="pdf" /> Upload PDF
            </label>
            <label>
              <input type="radio" name="fileType" value="text" /> Upload Text
            </label>
          </div>

          <div class="file-input-container" id="dropZone">
            <span class="file-type-label">Upload</span>
            <input type="file" id="fileInput" name="file" accept="image/*,.pdf" style="display: none" />
            <button type="button" id="fileSelectButton">
              <i class="fas fa-cloud-upload-alt"></i>
              Select File
            </button>
            <p class="upload-instructions">or drag and drop your file here</p>
            <span id="fileInfo"></span>
          </div>

          <div
            id="scanOptionsContainer"
            class="scanOptionsContainer"
            style="display: none"
          >
            <p>Select Scan Type:</p>
            <label>
              <input type="radio" name="scanType" value="highLevel" /> CTscan /
              X-Ray
            </label>
            <label>
              <input type="radio" name="scanType" value="lowLevel" /> Biopsy
            </label>
          </div>

          <div id="textInputContainer" style="display: none">
            <textarea
              id="textInput"
              name="textInput"
              rows="4"
              placeholder="Enter Symptoms if you are having any......"
            ></textarea>
          </div>

          <button type="submit" class="submit-button">Upload</button>
        </form>

        <!-- Loading Spinner -->
        <div id="loadingSpinner" style="display: none;">
          <div class="overlay"></div>
          <div class="spinner"></div>
      </div>
      </div>
    </div>

    
